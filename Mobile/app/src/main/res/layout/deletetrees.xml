<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert tree's ID you want to remove. "
            android:textColor="#f8f8ff"
            android:textSize="19sp"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:hint="Tree ID"
            android:gravity="center|left"
            android:ems="10"
            android:id="@+id/etTreeID"
            android:background="@drawable/round_corner"
            android:textColor="#000000"
            android:layout_below="@+id/text"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:text="Delete"
            android:id="@+id/deleteTree"
            android:textColor="#fff"
            android:background="#678C3F"
            android:layout_marginStart="57dp"
            android:layout_below="@+id/etTreeID"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:text="Delete All"
            android:id="@+id/etAllTreeID"
            android:textColor="#fff"
            android:background="#678C3F"
            android:layout_alignTop="@+id/deleteTree"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp" />




    </RelativeLayout>
</LinearLayout>